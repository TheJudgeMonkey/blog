<h1><%= @article.title %></h1>

<%= link_to "Home", articles_path, class: "btn_home" %>

<div class="text">
  <ul>
    <li><%= link_to "Edit", edit_article_path(@article), 
                  style: 'text-decoration: none; color: green;' %></li>
    <li><%= link_to "Destroy", article_path(@article), 
                  method: :delete,
                  data: { confirm: "Are you sure?" }, 
                  style: 'text-decoration: none; color: red;' %></li>
  </ul>
  <p><%= @article.body %></p>
</div>

<div class="comments">

  <div class="allCom">
    <h2 align="center">Comments</h2>
    <%= render @article.comments %>
  </div>

  <div class="addCom">
    <h2>Add a comment:</h2>
    <%= render 'comments/form' %>
  </div>

</div>

